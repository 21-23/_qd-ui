@import '~common/styles/color-palette.styl'

html
    min-height 100%
    background linear-gradient(to top, background-blue-0 0, background-blue-1 35%, background-blue-2 70%, background-blue-3 100%)

.login-view
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    font-family Helvetica, 'Helvetica Neue', Arial


    .login-panel
        position absolute
        width 100%
        height 15vh
        top 60vh

        .login-button
            height 13vh
            width 13vh
            line-height 13vh
            font-size 9vh
            text-align center

@media all and (orientation: landscape)
// TODO: where to make this override?
    .login-view
        .login-panel
            top 40vh
            height 20vh
            justify-content center

            .login-button
                height 18vh
                width 18vh
                line-height 18vh
                font-size 13vh
                margin 0 2vh
