.timer
    position relative
    display flex
    justify-content center
    flex-direction column

    .time-text
        text-align center

    .circle-container
        position absolute
        transform rotate(-270deg)

        .circle-remaining
            stroke-dashoffset 0
            transform rotate(180deg)
            transform-origin 50% 50%
            transition stroke-dashoffset 1s linear
