@import '~common/fonts/families.styl'

.game-progress
    .progress-bar
        width 100%
        height .5vh
        transform-origin 0 50%
        transition transform 1s
        margin-bottom .5em

    .round-mark-container
        width 100%
        display flex
        justify-content space-between

        .-past
            font-family AwesomeIcon
            padding .1em
            border-radius 50%

    &.-selectable
        .mark
            &:hover
                cursor pointer
