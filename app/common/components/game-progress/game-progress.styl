@import '~common/fonts/families.styl'

.game-progress
    .progress-bar
        width 100%
        height .5vh
        transform-origin 0 50%
        transition transform 1s
        margin-bottom .5em

    .round-mark-container
        width 100%
        display flex
        justify-content space-between

        .-past
            font-family AwesomeIcon
            padding .1em
            border-radius 50%

    &.-selectable
        .mark
            width 21px
            height 21px
            text-align center
            box-sizing border-box

            &:hover
                cursor pointer

            &.-selected
                position relative

                &:before
                    font-family AwesomeIcon
                    content '\f062'
                    position absolute
                    left 0
                    bottom -.7em
                    width 100%
                    font-size .5em
                    text-align center

