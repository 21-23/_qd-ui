@import '~common/styles/color-palette.styl'

html
    min-height 100%
    background linear-gradient(to top, background-blue-0 0, background-blue-1 35%, background-blue-2 70%, background-blue-3 100%)
    overflow hidden

.landing-view
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    font-family Helvetica, 'Helvetica Neue', Arial
    display flex
    justify-content center
    align-items center

    .logo-container
        background holy-white
        padding 2vw
        box-shadow 0 0 .7em #000

        .qd-chars
            font-size 600%

        .lodash-underlogo
            background lodash-blue
            height 2vh
